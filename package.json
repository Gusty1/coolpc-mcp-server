{
  "name": "coolpc-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for querying Taiwan CoolPC computer component specifications and prices through Claude Desktop",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "npx supergateway --stdio \"node ./build/index.js\" --port 8000 --baseUrl http://localhost:8000 --ssePath /sse --messagePath /message",
    "start_origin": "node build/index.js"
  },
  "keywords": [
    "mcp",
    "server",
    "computer",
    "components",
    "coolpc",
    "taiwan",
    "claude",
    "ai",
    "pricing"
  ],
  "author": "shyuan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shyuan/coolpc-mcp-server.git"
  },
  "homepage": "https://github.com/shyuan/coolpc-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/shyuan/coolpc-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.6"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
